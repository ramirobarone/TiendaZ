<?xml version="1.0" encoding="utf-8" ?>
<ContentPage:PopupPage  xmlns:ContentPage="http://rotorgames.com" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTiendaZ.Views.Popup.MessagePopup">
    <ContentPage.Content>
        <Frame Style="{StaticResource FrameMainBoard}" VerticalOptions="Center" HorizontalOptions="Center" Margin="40,0"> 

            <StackLayout>
                <Label x:Name="textoMensaje"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage:PopupPage>