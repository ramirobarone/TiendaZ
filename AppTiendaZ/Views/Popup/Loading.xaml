<?xml version="1.0" encoding="utf-8" ?>
<ContentPage:PopupPage  xmlns:ContentPage="http://rotorgames.com" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTiendaZ.Views.Popup.Loading" >
    <ContentPage.Content>
        <Frame  CornerRadius="10" 
                BackgroundColor="White" 
                BorderColor="{StaticResource GrisClaroFondo}" 
                HasShadow="True"
                HorizontalOptions="Center"
                VerticalOptions="Center">

            <StackLayout Spacing="5" BackgroundColor="Transparent" Opacity="0.9" HorizontalOptions="Center" VerticalOptions="Center">
                <ActivityIndicator Color="{StaticResource AzulZenziya}" IsVisible="True" IsRunning="True" IsEnabled="True"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage:PopupPage>